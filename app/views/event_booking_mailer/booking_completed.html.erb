        font-family: Arial, sans-serif;
        font-size: 14px;
        line-height: 14px;
        margin: 0;
        padding: 0 0 5px;">
      <%= simple_format [@event_booking.address_line_1, @event_booking.address_line_2, @event_booking.town, @event_booking.postcode].compact.reject {|x| x.blank? }.join("\n") %>
    </td>
  </tr>
