<%= render(partial: 'optimadmin/shared/header/main_title', locals: { title: t('optimadmin.views.module.index.title', model_name: Memberships::HowHeard.model_name.human.pluralize) }) %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render(partial: 'optimadmin/shared/module/index/new_item', locals: { title: Memberships::HowHeard.model_name.human.titleize, object: Memberships::HowHeard, path: { action: :new } }) %>
    <%= render(partial: 'optimadmin/shared/search_form') %>
    <%= render(partial: 'optimadmin/shared/module/index/pagination') %>
    <%#= render(partial: 'optimadmin/shared/module/index/order', locals: { options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC']] }) %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    <%= list_item('') { 'Title' } %>
    <%= list_item('large-1 small-4 text-center') { 'Display' } %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 text-center last') { 'Delete' } %>
  </div>

  <div class="module-sortable" data-module="Memberships::HowHeard">
    <%= render(partial: 'how_heard', collection: @how_heards, as: :how_heard, cached: true) %>
  </div>

  <%= paginate(@how_heards) %>
</div>
