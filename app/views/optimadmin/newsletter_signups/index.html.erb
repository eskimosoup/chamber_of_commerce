<%= render 'optimadmin/shared/header/main_title', title: 'Manage Newsletter Signups' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%#= render 'optimadmin/shared/module/index/new_item', title: 'Newsletter Signup', object: NewsletterSignup, path: new_newsletter_signup_path %>
    <%= link_to "Download CSV", export_csv_newsletter_signups_path, class: "action-button" %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <%= render 'optimadmin/shared/module/index/order', options: [['Email', 'email_address'], ['Created', 'created_at']] %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @newsletter_signups.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-11 small-12' do 'Email address' end %>

    <%= list_item 'large-1 hide-for-medium-down text-center last' do 'Delete' end %>
  </div>

  <% @newsletter_signups.each do |newsletter_signup_presenter| %>
    <%= render partial: 'newsletter_signup', locals: { newsletter_signup_presenter: newsletter_signup_presenter } %>
  <% end %>
  <%= paginate @newsletter_signups %>
</div>
