<% present article do |article_presenter| %>
  <div class="row collapse module-list-index <%= cycle('odd', 'even') %>" data-equalizer="module-list" id="item_<%= article_presenter.id %>">
    <div class="columns" data-equalizer-watch="module-list">
      <%= article_presenter.toggle_title %>
    </div>
    <div class="columns" data-equalizer-watch="module-list">
      <%= article_presenter.date %>
    </div>
    <div class="large-2 hide-for-medium-down columns" data-equalizer-watch="module-list">
      <%= article_presenter.edit_image(:image) %>
    </div>
    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%= article_presenter.toggle_link %>
    </div>
    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%= article_presenter.show_link %>
    </div>
    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%= article_presenter.edit_link %>
    </div>
    <div class="large-1 hide-for-medium-down columns last" data-equalizer-watch="module-list">
      <%= article_presenter.delete_link %>
    </div>
    <div class="row module-list-detail hide" id="index-list-<%= article_presenter.id %>">
      <div class="small-12 columns module-list-summary last">
        <%= article_presenter.summary %>
      </div>
    </div>
  </div>
<% end %>
