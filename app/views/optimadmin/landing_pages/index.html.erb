<%= render(partial: 'optimadmin/shared/header/main_title', locals: { title: t('optimadmin.views.module.index.title', model_name: LandingPage.model_name.human.pluralize) }) %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render(partial: 'optimadmin/shared/module/index/new_item', locals: { title: LandingPage.model_name.human.titleize, object: LandingPage, path: { action: :new } }) %>
    <%= render(partial: 'optimadmin/shared/search_form') %>
    <%= render(partial: 'optimadmin/shared/module/index/pagination') %>
    <%#= render(partial: 'optimadmin/shared/module/index/order', locals: { options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC']] }) %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item('') { 'Title' } %>
    <%= list_item('') { 'Sections' } %>

    <%= list_item('large-2 hide-for-medium-down') { 'Image' } %>

    <%= list_item('large-1 small-4 text-center') { 'Display' } %>
    <%= list_item('large-1 small-4 text-center') { 'View' } %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 text-center last') { 'Delete' } %>
  </div>

  <!-- <div class="module-sortable" data-module="LandingPage"> -->
  <%= render(partial: 'landing_page', collection: @landing_pages, as: :landing_page, cached: true) %>
  <!-- </div> -->

  <%= paginate(@landing_pages) %>
</div>
