<div class="content-categories-sidebar">
  <div class="row collapse">
    <div class="small-8 show-for-medium-down columns">
      <%= link_to octicon('book') + 'Manage Content',
                  '#',
                  class: 'content-categories-toggle toggle-class',
                  data: {
                      class: 'content-categories-toggle-visiblity',
                      container: '.content-categories, .content-categories-toggle',
                      return: 'true'
                  } %>
    </div>
    <div class="small-4 show-for-medium-down columns">
      <%= link_to logout_path, class: 'logout-link' do %>
        <%= octicon('sign-in') %> Logout
      <% end %>
    </div>
  </div>

  <div class="row collapse">
    <div class="large-12 small-8 left content-categories columns">
      <div class="content-category-type">
        Manage Your Content
      </div>

      <ul id="modules" class="content-category-list">
        <li><%= link_to 'Site Navigation', menu_items_path %></li>
        <%= module_link(model: Magazine, path: magazines_path) %>
        <%= module_link(model: Page, path: pages_path) %>
        <%= module_link(content: "Additional Content", model: AdditionalContent, path: additional_contents_path) %>
        <%= module_link(content: "Newsletter Signups", model: NewsletterSignup, path: newsletter_signups_path) %>
        <%= module_link(model: Patron, path: patrons_path) %>
        <%= module_link(content: "Internal Promotions", model: InternalPromotion, path: internal_promotions_path) %>
        <%= module_link(content: Advertisement.model_name.human.pluralize.titleize, model: Advertisement, path: advertisements_path) if current_administrator.username == 'optimised' %>
        <% if can? :manage, Optimadmin::MenuItem %>
        <% end %>
      </ul>

      <div class="content-category-type">
        Manage Articles
      </div>

      <ul class="content-category-list">
        <%= module_link(model: Article, path: articles_path) %>
        <%= module_link(content: "Article Categories", model: ArticleCategory, path: article_categories_path) %>
      </ul>

      <div class="content-category-type">
        Manage Events
      </div>

      <ul class="content-category-list">
        <%= module_link(model: Event, path: events_path) %>
        <%= module_link(content: "Event Offices", model: EventOffice, path: event_offices_path) %>
        <%= module_link(content: "Event Categories", model: EventCategory, path: event_categories_path) %>
        <%= module_link(content: "Event Locations", model: EventLocation, path: event_locations_path) %>
        <%= module_link(content: EventGroup.model_name.human.pluralize.titleize, model: EventGroup, path: event_groups_path) %>
      </ul>

      <div class="content-category-type">
        Manage Members
      </div>

      <ul class="content-category-list">
        <%= module_link(model: Industry, path: industries_path) %>
        <%= module_link(model: Member, path: members_path) %>
        <%= module_link(content: "Member Offers", model: MemberOffer, path: member_offers_path) %>
        <%= module_link(content: Memberships::Group.model_name.human.pluralize.titleize, model: Memberships::Group, path: memberships_groups_path) %>
        <%= module_link(content: Memberships::Package.model_name.human.pluralize.titleize, model: Memberships::Package, path: memberships_packages_path) %>
        <%= module_link(content: Memberships::Enquiry.model_name.human.pluralize.titleize, model: Memberships::Enquiry, path: memberships_enquiries_path) %>
        <%= module_link(content: Memberships::Payment.model_name.human.pluralize.titleize, model: Memberships::Payment, path: memberships_payments_path) %>
        <%= module_link(content: Memberships::HowHeard.model_name.human.pluralize.titleize, model: Memberships::HowHeard, path: memberships_how_heards_path) %>
        <%= module_link(content: Memberships::JoinReason.model_name.human.pluralize.titleize, model: Memberships::JoinReason, path: memberships_join_reasons_path) %>
      </ul>
    </div>
  </div>
</div>
