<%= form_for @member_login do |f| %>
  <% if @member_login.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member_login.errors.count, "error") %> prohibited your member account being created:</h2>

      <ul>
        <% @member_login.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= field_set_tag 'Your Details' do %>
    <%= f.label :member_id, 'Select your company' %>
    <%= f.select :member_id, options_for_select(Member.all.map{|x| ["#{x.company_name} #{"- #{x.post_code}" if x.post_code}", x.id]}, selected: (params[:member_login][:member_id] if params[:member_login].present?)), prompt: 'Please select your company' %>

    <div class="fields">
      <div class="row">
        <div class="small-12 medium-4 columns">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: 'Username' %>
        </div>

        <div class="small-12 medium-4 columns">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: 'Password' %>
        </div>

        <div class="small-12 medium-4 columns">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>
        </div>
      </div>
    </div>

    <%= f.submit 'Create account', class: 'button' %>
  <% end %>
<% end %>
