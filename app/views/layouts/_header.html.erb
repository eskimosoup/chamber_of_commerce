<header>
  <div class="row">
    <div class="small-5 medium-8 columns">
      <%= link_to root_path, title: global_site_settings['Name'], class: 'logo' do %>
        <%= image_tag 'layout/header/logo.png', alt: global_site_settings['Name'] %>
      <% end %>
    </div>

    <div class="small-7 medium-4 columns">
      <div class="text-right">
        <%= render 'shared/member_buttons' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <nav>
        <ul class="header-navigation">
          <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
        </ul>
      </nav>
    </div>
  </div>
</header>
