<section class="content-area">
  <div class="row">
    <div class="medium-8 small-12 columns">
      <div class="main-content-wrap">
        <h1>Edit Your Details</h1>

        <div class="content">
          <%= link_to 'Manage your offers', member_member_offers_path(current_member), class: 'content-box-ghost-button' %>

          <p>Please note that editing your details will be verified by an administrator before it is reflected on the website.</p>

          <p>If you want to change your password, you should <%= link_to 'use the password reset page', edit_member_logins_path %>.</p>

          <%= render 'shared/flash_messages', locales: { flash: flash } %>

          <%= form_for @member, url: update_members_path do |f| %>
            <% if @member.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

                <ul>
                  <% @member.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= field_set_tag 'Company information' do %>
              <div class="field">
                <%= f.label :company_name %><br>
                <%= f.text_field :company_name %>
              </div>

              <div class="field">
                <%= f.label :industry %><br>
                <%= f.select :industry, Member::INDUSTRIES %>
              </div>

              <div class="field">
                <%= f.label :address %><br>
                <%= f.text_area :address, value: strip_tags(current_member.address) %>
              </div>

              <div class="field">
                <%= f.label :telephone %><br>
                <%= f.text_field :telephone %>
              </div>

              <div class="field">
                <%= f.label :website %><br>
                <%= f.text_field :website %>
              </div>

              <div class="field">
                <%= f.label :email %><br>
                <%= f.text_field :email %>
              </div>

              <div class="field">
                <%= f.label :nature_of_business %><br>
                <%= f.text_area :nature_of_business, value: strip_tags(current_member.nature_of_business) %>
              </div>
            <% end %>

            <div class="actions">
            <%= f.submit 'Request changes', class: 'button' %>
            </div>
            <% end %>
        </div>
      </div>
    </div>

    <div class="medium-4 small-12 columns">
      <%= render 'shared/sidebar' %>
    </div>
  </div>
</section>
