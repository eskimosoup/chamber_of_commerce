<%= @internal_promotions.leaderboard('Home - Members Area', 'section small')  if @internal_promotions.present? %>

<div class="row">
  <div class="small-12 section large columns" data-equalizer="row-content-box">
    <h2 class="full-header members-header"><div>Members' Area</div></h2>

    <div class="home-member-buttons">
      <%= render 'shared/member_buttons' %>
    </div>

    <div class="row">
      <div class="small-4 columns">
        <div class="content-box"  data-equalizer-watch="row-content-box">
          <div class="content-box-area-title">
            <%= two_tone_title "Members' News" %>
          </div>

          <div class="inner">
            <ul class="plain-list news">
              <%= render partial: 'articles/simple_list', collection: @member_news, as: :article_presenter %>
            </ul>
          </div>

          <div class="button-text-center">
            <%= link_to 'See All', '#', class: 'content-box-ghost-button' %>
          </div>
        </div>
      </div>

      <div class="small-4 columns">
        <div class="content-box" data-equalizer-watch="row-content-box">
          <div class="content-box-area-title">
            <%= two_tone_title "Members' Services" %>
          </div>

          <div class="inner text-center">
            <ul class="plain-list">
              <%= nested_menu_items(menu_items: @members_services_menu.menu_items.first(12)) %>
            </ul>
          </div>

          <div class="button-text-center">
            <%= link_to 'See All', @members_services_page, class: 'content-box-ghost-button' if @members_services_page.present? %>
          </div>
        </div>
      </div>

      <div class="small-4 columns">
        <div class="members-information"  data-equalizer-watch="row-content-box">
          <div class="preview-members-directory">
            <%= link_to (image_tag 'components/members/directory-a-z.png', alt: 'Members A to Z'), '#', title: 'Members A to Z' %>


            <%= link_to (two_tone_title "Members' Directory"), '#', title: "Members' Directory", class: 'title' %>
          </div>

          <div class="preview-second-home-item">
            <div class="row collapse">
              <div class="small-6 columns">
                <%= @magazine.preview %>
              </div>

              <div class="small-6 columns">
                <div class="content">
                  <div class="magazines-title title">
                    <%= link_to ( two_tone_title "Business Intelligence Magazine" ), magazines_path %>
                  </div>

                  <p class="summary">
                    Publicise your business with free articles inside
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
