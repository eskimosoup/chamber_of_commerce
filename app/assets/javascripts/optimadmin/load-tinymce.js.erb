$(document).ready(function() {
  $('.tinymce').tinymce({
    paste_text_sticky: true,
    paste_text_sticky_default: true,
    theme: 'modern',
    height: 600,
    plugins: [
        'contextmenu media code link paste autolink hr preview table mantlink mantimage'
    ],
    menubar: 'edit insert format table tools',
    toolbar1: 'styleselect | bold italic underline | alignleft aligncenter alignright outdent indent | bullist numlist | subscript superscript strikethrough',
    toolbar2: 'link optimage | preview | hr',
    content_css: "<%= stylesheet_path 'optimadmin/global/editor' %>",
    link_list: "/admin/link_list.js",
    image_list: "/admin/images.js",
    style_formats: [
      { block: 'h2',  title: 'Header 2' },
      { block: 'h3',  title: 'Header 3' },
      { block: 'h4',  title: 'Header 4' },
      { block: 'h5',  title: 'Header 5' },
      { block: 'h6',  title: 'Header 6' },
      { title: 'Paragraph Highlight', selector: 'p', attributes: { class: 'paragraph-highlight' }},
